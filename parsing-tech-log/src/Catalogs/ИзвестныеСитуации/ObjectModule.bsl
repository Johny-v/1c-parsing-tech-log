

Процедура ПередЗаписью(Отказ)
	
	Если НЕ ЭтоГруппа Тогда
		хеширование = Новый ХешированиеДанных(ХешФункция.SHA1);
		хеширование.Добавить(Текст);
		ХешЗначения = Base64Строка(хеширование.ХешСумма);	
		
		Для каждого стр из ТекстыВариантов Цикл
			хеширование = Новый ХешированиеДанных(ХешФункция.SHA1);
			хеширование.Добавить(стр.Текст);
			стр.ХешЗначения = Base64Строка(хеширование.ХешСумма);	
		КонецЦикла;
	КонецЕсли;
	
