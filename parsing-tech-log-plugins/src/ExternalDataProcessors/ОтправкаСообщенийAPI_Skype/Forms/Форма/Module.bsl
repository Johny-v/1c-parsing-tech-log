Процедура СохранитьНастройки(Команда)
	мНастройка = новый Структура();
	мНастройка.Вставить("IDПриложения",IDПриложения);
	мНастройка.Вставить("IDЧата",IDЧата);
	мНастройка.Вставить("Пароль",Пароль);
